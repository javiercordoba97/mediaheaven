<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %>

    <body>

        <%- include("../partials/header") %>

            <main class="detalle">
                <div class="juego">
                    <!-- AGREGA LA CLASE 'detalle-img' PARA ESTILOS ESPECÍFICOS -->
                    <img src="<%= productoEncontrado.imagen %>" alt="" class="detalle-img">
                    <div class="descripcion">
                        <ul>
                            <li>
                                <h2>
                                    <%= productoEncontrado.nombre %>
                                </h2>
                            </li>
                            <div class="tituloJuego">
                                <li>
                                    <h3>
                                        <%= productoEncontrado.precio %>
                                    </h3>
                                </li>
                                <li>en 12x $<%= (productoEncontrado.precio/12).toFixed(2) %>
                                </li>
                            </div>
                            <div class="datosJuego">
                                <!-- BOTÓN AGREGAR AL CARRITO – MODIFICADO -->
                                <li>
                                    <form action="/cart/add/<%= productoEncontrado.id %>" method="POST" style="display:inline;">
                                        <button class="botonDeCompra" type="submit">Agregar al Carrito</button>
                                    </form>
                                </li>
                            </div>
                            <a href="/products/edicion/<%= productoEncontrado.id %>">
                                <li><button class="botonDeEdicion">Editar Producto</button></li>
                            </a>
                            <form action="/edicion/<%=productoEncontrado.id%>?_method=Delete" method="post">
                                <li><button class="delete" type="submit">Eliminar Producto</button></li>
                            </form>
                        </ul>
                    </div>
                </div>
                <p class="detalle">
                    <%= productoEncontrado.descripcion %>
                </p>
            </main>

            <%- include("../partials/footer") %>

    </body>
</html>