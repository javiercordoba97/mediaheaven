<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %> 

<body>

    <%- include("../partials/header") %> 

    <main class="login">
        <div class="login-container">
            <h1>CREA TU CUENTA</h1>
            <form class="form" action="/register" enctype="multipart/form-data" method="POST">
                <div class="form-group">
                    <% if (typeof errors !== "undefined") { %>
                        <ul class="err">
                            <% Object.keys(errors).forEach(function(key) { %>
                                <li style="color:red;"><%= errors[key].msg %></li>
                            <% }) %>
                        </ul>
                    <% } %>
                    
                    <label for="userImage">Imagen de perfil</label>
                    <input type="file" id="userImage" name="userImage" accept="image/*">

                    <label for="name">Nombre</label>
                    <input type="text" id="name" name="name" value="<%= typeof oldData !== 'undefined' ? oldData.name : '' %>">

                    <label for="last_name">Apellido</label>
                    <input type="text" id="last_name" name="last_name" value="<%= typeof oldData !== 'undefined' ? oldData.last_name : '' %>" >

                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password">

                    <label for="confirmPassword">Repetir Contraseña</label>
                    <input type="password" id="confirmPassword" name="confirmPassword">

                    <label for="tel">Teléfono</label>
                    <input type="number" id="tel" name="telefono" value="<%= typeof oldData !== 'undefined' ? oldData.telefono : '' %>">

                    <label for="email">Correo Electronico</label>
                    <input type="email" id="email" name="email" value="<%= typeof oldData !== 'undefined' ? oldData.email : '' %>">
                </div>
                
                <button type="submit">Registrarse</button>
            </form>
        </div>
    </main>

    <%- include("../partials/footer") %>
    <script src="/js/registerValidation.js"></script>
</body>

</html>